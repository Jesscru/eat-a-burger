<h1>Burgers!</h1>

<div class="card not-eaten">
  <div class="card-body">
    <h2>Eaten Burgers!</h2>

    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
</div>

<div class="card add-burger">
  <div class="card-body">
    <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <button type="button submit" class="btn btn-secondary">Add Burger</button>
    </form>
    </div>
</div>

<div class="card eaten">
  <div class="card-body">
    <h2>Order Up!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


